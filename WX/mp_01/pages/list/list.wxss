
.input-row {
  display: flex;

}
.custom-icon {
  margin-left: 30px; 
  color: #ccc;
  /* 清除默认外边距，若之前有设置的话 */
  border-top:1px solid #ccc;
  border-bottom: 1px solid #ccc;
  border-left: 1px solid #ccc;
  border-right: none;
  padding: 8px; 
  /* 统一垂直方向内边距，可根据需求调整，保证和输入框高度适配 */
  line-height: normal; 
  /* 重置行高，让文字垂直居中，也可根据实际设置固定值 */
  display: flex;
  align-items: center; 
  /* 让内部文字或内容垂直居中 */
}

.easyinput {
  border: 1px solid #ccc;
  border-left: none; 
  padding: 8px; 
  /* 和 custom-icon 垂直内边距保持一致，保证高度适配 */
  margin: 0; 
  /* 清除默认外边距 */
  line-height: normal;
  border-radius: 0; 
  /* 若不需要圆角可去掉，需要的话也可统一两边圆角样式 */
}